<p id="notice"><%= notice %></p>

<h1>Lista porad</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tips.each do |tip| %>
      <tr>
        <div>
          <%= tip.content %>
        </div>
        <% if tip.user == current_user %>
        <td><%= link_to 'Show', tip %></td>
          <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
          <td><%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td> <%= link_to 'New Tip', new_tip_path %> </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

